{
  "compilerOptions" : {
    "target" : "es6",                            
    "module" : "ESNext",
    "outDir" : "./dist",
    "rootDir" : "./src",                          
    "esModuleInterop" : true,                            
    "forceConsistentCasingInFileNames" : true,      
    "allowSyntheticDefaultImports": true,     
    "strict" : true,                                      
    "skipLibCheck" : true                                 
  },
  "include": [
      "src/**/*.ts",
      "config/**/*.ts"
    ],
  "exclude" : ["node_modules"]
}
